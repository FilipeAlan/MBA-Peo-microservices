@namespace Peo.Web.Spa.Shared
@inject NavigationManager Nav

@code {
    protected override void OnInitialized()
    {
        var relative = Nav.ToBaseRelativePath(Nav.Uri);

        if (relative.StartsWith("login", StringComparison.OrdinalIgnoreCase))
            return;

        if (string.IsNullOrWhiteSpace(relative))
            relative = "/";
        else if (!relative.StartsWith('/'))
            relative = "/" + relative;

        var target = $"/login?returnUrl={Uri.EscapeDataString(relative)}";
        Nav.NavigateTo(target, forceLoad: true);
    }
}
